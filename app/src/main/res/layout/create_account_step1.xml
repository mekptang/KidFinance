<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:weightSum="10" >

    <TextView
        android:id="@+id/create_account_step1_title"
        android:text="Step 1: Choose your Gender!"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="100px"
        android:layout_gravity="center"
        android:layout_weight="2" />

    <ImageButton
        android:id="@+id/create_account_step1_boy"
        android:src="@drawable/create_account_step1_boy"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_weight="2.5" />

    <TextView
        android:id="@+id/create_account_step1_blank1"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />

    <ImageButton
        android:id="@+id/create_account_step1_girl"
        android:src="@drawable/create_account_step1_girl"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_weight="2.5" />

    <TextView
        android:id="@+id/create_account_step1_blank2"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/create_account_step1_next"
        android:src="@drawable/create_account_next"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:maxHeight="100px"
        android:scaleType="fitCenter"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/create_account_step1_blank3"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />
</LinearLayout>