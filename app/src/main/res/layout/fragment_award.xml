<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc0cb"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/award_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/award_title" />

    <ImageView
        android:id="@+id/award_decor"
        android:layout_width="122dp"
        android:layout_height="130dp"
        android:layout_alignBottom="@+id/award_page_title"
        android:layout_marginLeft="290dp"
        android:layout_marginBottom="-7dp"
        app:srcCompat="@drawable/award_bgdecoration" />

    <android.support.v4.view.ViewPager
        android:id="@+id/awardViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/award_page_title"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="never" />

    <Button
        android:id="@+id/setAwardBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/round"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Get This Award !"
        android:textColor="#fff" />

</RelativeLayout>