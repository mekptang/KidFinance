<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:weightSum="10" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:src="@drawable/guide_step0_2_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="70px"
        android:paddingRight="70px"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="2" />

    <ImageView
        android:id="@+id/create_account_step0_money"
        android:src="@drawable/create_account_step0_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="300px"
        android:paddingTop="100px"
        android:paddingBottom="100px"
        android:layout_gravity="center"
        android:layout_weight="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/guide_next"
        android:src="@drawable/create_account_next"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:maxHeight="100px"
        android:scaleType="fitCenter"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" />
</LinearLayout>