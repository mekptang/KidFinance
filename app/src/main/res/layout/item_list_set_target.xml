<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <ImageView
        android:id="@+id/item_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="2"
        android:src="@drawable/target_blue_juice" />

    <ImageButton
        android:id="@+id/plus_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_weight="2"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/target_plus" />

    <TextView
        android:id="@+id/item_count"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/minus_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_weight="2"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/target_minus" />

    <ImageButton
        android:id="@+id/item_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/target_cross" />

</LinearLayout>
