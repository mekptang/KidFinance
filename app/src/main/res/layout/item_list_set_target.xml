<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineProvider="none"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/item_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@null"
            android:src="@drawable/target_blue_juice" />

        <ImageButton
            android:id="@+id/plus_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@id/item_logo"
            android:layout_toRightOf="@id/item_logo"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/target_plus" />

        <TextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/plus_item"
            android:layout_toRightOf="@id/plus_item"
            android:text="line1"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_toEndOf="@id/plus_item"
            android:layout_toRightOf="@id/plus_item"

            android:text="line2"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/minus_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@id/item"
            android:layout_toRightOf="@id/item"
            android:background="@null"

            android:scaleType="centerInside"
            android:src="@drawable/target_minus" />

        <ImageButton
            android:id="@+id/item_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/minus_item"
            android:layout_toRightOf="@id/minus_item"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/target_cross" />
    </RelativeLayout>



</android.support.v7.widget.CardView>
