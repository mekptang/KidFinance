<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:weightSum="10" >

    <ImageView
        android:id="@+id/create_account_step0_title"
        android:src="@drawable/create_account_step0_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="300px"
        android:paddingTop="100px"
        android:layout_gravity="center"
        android:layout_weight="2" />

    <ImageView
        android:id="@+id/create_account_step0_money"
        android:src="@drawable/create_account_step0_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="300px"
        android:paddingTop="100px"
        android:paddingBottom="100px"
        android:layout_gravity="center"
        android:layout_weight="3" />

    <TextView
        android:id="@+id/create_account_step0_guide"
        android:text="Let's create an account first!"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:maxHeight="100px"
        android:layout_gravity="center"
        android:layout_weight="3" />

    <ImageButton
        android:id="@+id/create_account_step0_next"
        android:src="@drawable/create_account_next"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:maxHeight="100px"
        android:scaleType="fitCenter"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/create_account_step0_blank"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>